style.
    body {
        font-family: "Open Sans", Arial, sans-serif;
    }
div.wrapper
  each output, index in locals.data
    h1 URI: #{output.apiUrl}
    div
      p #{output.requestCount} requests sent over #{output.testDurationSeconds} seconds 
      p #{output.errorCount} requests failed
      p Average successful response time: #{output.averageResponseTime}ms
      p Slowest successful response time: #{output.slowestResponseTime}ms
      p Fastest successful response time: #{output.fastestResponseTime}ms
    div(class="chart")        
      canvas(id="chartPic"+index width="400" height="400")


script(src=chartJsPath)
script.
 !{chartScript};
